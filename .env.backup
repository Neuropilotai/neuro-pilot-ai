# Neuro-Pilot-AI Environment Variables
# Copy this file to .env and fill in your actual API keys

# Application Configuration
PORT=3001
NODE_ENV=development
WEBHOOK_PORT=3000

# Notion Integration (Required)
NOTION_TOKEN=PASTE_YOUR_INTEGRATION_TOKEN_HERE
NOTION_PARENT_PAGE_ID=PASTE_YOUR_PAGE_ID_HERE
NOTION_RESUME_DATABASE_ID=your_resume_database_id_here
NOTION_TEMPLATE_DATABASE_ID=your_template_database_id_here

# OpenAI Configuration (Required)
OPENAI_API_KEY=sk-your_openai_api_key_here

# Stripe Payment Processing (Required)
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_stripe_webhook_secret_here

# Email Configuration (Required for notifications)
EMAIL_USER=your_email@gmail.com
EMAIL_PASS=your_app_password
EMAIL_FROM=noreply@yourdomain.com

# Ngrok Configuration (for local development)
NGROK_AUTH_TOKEN=your_ngrok_auth_token_here

# Security
JWT_SECRET=your_jwt_secret_for_authentication
ENCRYPTION_KEY=your_32_character_encryption_key_here

# Frontend URL
FRONTEND_URL=http://localhost:3001

# Monitoring (Optional)
LOG_LEVEL=info
ENABLE_ANALYTICS=true