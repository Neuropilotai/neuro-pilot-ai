{
  "name": "neuro-inventory-enterprise",
  "version": "1.0.0",
  "description": "Enterprise-grade bilingual inventory management system",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "concurrently \"npm:dev:*\"",
    "dev:api": "npm run dev --workspace=@neuro/api",
    "dev:web": "npm run dev --workspace=@neuro/web",
    "build": "npm run build --workspaces",
    "build:api": "npm run build --workspace=@neuro/api",
    "build:web": "npm run build --workspace=@neuro/web",
    "db:generate": "prisma generate",
    "db:migrate": "prisma migrate dev",
    "db:push": "prisma db push",
    "db:seed": "tsx prisma/seeds/seed.ts",
    "db:studio": "prisma studio",
    "db:reset": "prisma migrate reset --force && npm run db:seed",
    "migrate:org": "tsx scripts/run-migration.ts organization",
    "migrate:balance": "tsx scripts/run-migration.ts balance",
    "migrate:all": "tsx scripts/run-migration.ts all",
    "backfill:balances": "tsx prisma/scripts/backfill-balances.ts",
    "reconcile:balances": "tsx apps/api/src/jobs/balance-reconciliation.ts",
    "monitor:backups": "tsx apps/api/src/jobs/backup-monitor.ts",
    "verify:backup": "tsx scripts/verify-backup.ts",
    "validate:migration": "tsx scripts/validate-migration.ts",
    "org:create": "tsx scripts/create-organization.ts",
    "org:list": "tsx scripts/list-organizations.ts",
    "users:assign": "tsx scripts/assign-users-to-org.ts",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:build": "docker build -t neuro-inventory:latest .",
    "lint": "eslint . --ext .ts,.tsx",
    "format": "prettier --write \"**/*.{ts,tsx,json,md}\"",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:integration": "jest --testPathPattern=integration",
    "test:unit": "jest --testPathIgnorePatterns=integration",
    "type-check": "tsc --noEmit"
  },
  "devDependencies": {
    "@types/jest": "^29.5.0",
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "concurrently": "^8.2.2",
    "eslint": "^8.55.0",
    "jest": "^29.7.0",
    "prettier": "^3.1.0",
    "prisma": "^5.7.0",
    "ts-jest": "^29.1.0",
    "tsx": "^4.7.0",
    "typescript": "^5.3.0"
  },
  "dependencies": {
    "@prisma/client": "^5.7.0"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  }
}
