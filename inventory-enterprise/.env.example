# NeuroPilot v17.4 - Sentient Cloud Mode
# Environment Configuration Template

# ================================================================
# MONITORING & OBSERVABILITY
# ================================================================

# Grafana Cloud
GRAFANA_URL=https://your-org.grafana.net
GRAFANA_API_KEY=glsa_your_grafana_api_key_here

# Prometheus
PROMETHEUS_URL=https://prometheus-prod-us-central-0.grafana.net

# Sentry
SENTRY_DSN=https://your_key@sentry.io/your_project
SENTRY_AUTH_TOKEN=sntrys_your_sentry_auth_token
SENTRY_ORG=your-org
SENTRY_PROJECT=neuropilot-backend

# ================================================================
# NOTIFICATIONS
# ================================================================

# Slack
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/T00000000/B00000000/XXXXXXXXXXXXXXXXXXXX

# Notion
NOTION_API_KEY=secret_your_notion_integration_key
NOTION_DB_ID=your_notion_database_id_here

# PagerDuty (optional)
PAGERDUTY_INTEGRATION_KEY=your_pagerduty_key

# ================================================================
# INFRASTRUCTURE PROVIDERS
# ================================================================

# Railway
RAILWAY_API_TOKEN=your_railway_api_token
RAILWAY_SERVICE_ID=your_service_id
RAILWAY_PROJECT_ID=your_project_id

# Neon (PostgreSQL)
NEON_API_KEY=your_neon_api_key
NEON_PROJECT_ID=your_project_id
NEON_BRANCH_ID=br-your-branch-id
DATABASE_URL=postgresql://user:pass@ep-xxx.us-east-2.aws.neon.tech/neondb

# Cloudflare
CLOUDFLARE_API_TOKEN=your_cloudflare_api_token
CLOUDFLARE_ZONE_ID=your_zone_id
CLOUDFLARE_EMAIL=your@email.com

# Vercel (Frontend)
VERCEL_TOKEN=your_vercel_token
VERCEL_PROJECT_ID=prj_your_project_id

# ================================================================
# BACKEND API
# ================================================================

# Backend URL (for health checks)
BACKEND_URL=https://api.neuropilot.yourdomain.com
API_URL=https://api.neuropilot.yourdomain.com

# ================================================================
# SENTIENT CORE v17.4
# ================================================================

# Forecast API (if separate endpoint)
FORECAST_API_URL=https://api.neuropilot.yourdomain.com/v1/forecast
FORECAST_API_TOKEN=your_forecast_api_token

# Governance Dashboard
NEXT_PUBLIC_DASH_TOKEN=your_dashboard_bearer_token_here

# ================================================================
# OPTIONAL INTEGRATIONS
# ================================================================

# GitHub (for Actions)
GITHUB_TOKEN=ghp_your_github_personal_access_token

# OpenAI (for future AI enhancements)
OPENAI_API_KEY=sk-your_openai_key

# ================================================================
# CONFIGURATION
# ================================================================

# Environment
NODE_ENV=production
ENVIRONMENT=production

# Logging
LOG_LEVEL=info

# ================================================================
# NOTES
# ================================================================
#
# 1. Copy this file to .env:
#    cp .env.example .env
#
# 2. Fill in all YOUR_* placeholders with actual values
#
# 3. NEVER commit .env to git (already in .gitignore)
#
# 4. For GitHub Actions, add all secrets via:
#    Settings > Secrets and variables > Actions > New repository secret
#
# 5. For Vercel, add via CLI:
#    vercel env add VARIABLE_NAME
#    or via dashboard: Settings > Environment Variables
#
# ================================================================
