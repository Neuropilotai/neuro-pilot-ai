# Environment Configuration
NODE_ENV=production
PORT=3001

# Security Settings
JWT_SECRET=your-super-secure-jwt-secret-here-at-least-32-chars
JWT_REFRESH_SECRET=your-super-secure-refresh-secret-here-different-from-jwt
BCRYPT_ROUNDS=12

# Database Configuration (when implemented)
DATABASE_URL=postgresql://username:password@localhost:5432/inventory_enterprise
REDIS_URL=redis://localhost:6379

# Logging Configuration
LOG_LEVEL=info
LOG_RETENTION_DAYS=90

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
AUTH_RATE_LIMIT_MAX=5

# CORS Origins (comma-separated)
ALLOWED_ORIGINS=http://localhost:3000,https://inventory.neuro-pilot.ai

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@company.com
SMTP_PASS=your-app-password
SMTP_FROM=noreply@neuro-pilot.ai

# File Upload Settings
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=image/jpeg,image/png,text/csv,application/pdf

# Backup Configuration
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_LOCATION=/backups

# Monitoring
HEALTH_CHECK_INTERVAL=60000
METRICS_ENABLED=true
APM_SERVICE_NAME=inventory-enterprise
APM_SERVER_URL=https://apm.elastic.co

# Feature Flags
ENABLE_AUDIT_LOGGING=true
ENABLE_PERFORMANCE_MONITORING=true
ENABLE_RATE_LIMITING=true
ENABLE_CORS=true

# Development Settings (only in development)
DEBUG_MODE=false
PRETTY_LOGS=false

# Admin Bootstrap (only for initial setup)
ADMIN_BOOTSTRAP_EMAIL=admin@neuro-pilot.ai
ADMIN_BOOTSTRAP_PASSWORD=ChangeThisSecurePassword123!

# External API Keys
WEATHER_API_KEY=your-weather-api-key
MAPS_API_KEY=your-maps-api-key

# Encryption Keys (for data at rest)
DATA_ENCRYPTION_KEY=your-32-char-encryption-key-here
DATA_ENCRYPTION_IV=your-16-char-iv-here

# Session Configuration
SESSION_SECRET=your-session-secret-different-from-jwt
SESSION_MAX_AGE=86400000

# Cache Configuration
CACHE_TTL=3600
CACHE_MAX_KEYS=1000

# Queue Configuration (for background jobs)
QUEUE_REDIS_URL=redis://localhost:6379/1
QUEUE_CONCURRENCY=5

# Third-party Integrations
STRIPE_SECRET_KEY=sk_live_...
STRIPE_WEBHOOK_SECRET=whsec_...
SLACK_WEBHOOK_URL=https://hooks.slack.com/...

# SSL/TLS Configuration (production)
SSL_CERT_PATH=/etc/ssl/certs/inventory.crt
SSL_KEY_PATH=/etc/ssl/private/inventory.key
FORCE_HTTPS=true

# Docker Configuration
DOCKER_HOST=unix:///var/run/docker.sock
CONTAINER_MEMORY_LIMIT=512m
CONTAINER_CPU_LIMIT=0.5