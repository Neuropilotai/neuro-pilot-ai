# Environment Configuration
NODE_ENV=production
PORT=8083

# Security Settings (v15.5.3)
# Generate with: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=your-jwt-secret-here-minimum-64-characters
JWT_REFRESH_SECRET=your-refresh-secret-here
BCRYPT_ROUNDS=12
JWT_ALG=HS512

# RBAC & Governance (v15.5.3)
FORECAST_SHADOW_MODE=true
EXPORT_RATE_LIMIT_PER_MIN=5
DUAL_CONTROL_ENABLED=true

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/inventory_enterprise
REDIS_URL=redis://localhost:6379

# Logging Configuration
LOG_LEVEL=info
LOG_RETENTION_DAYS=90

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
AUTH_RATE_LIMIT_MAX=5

# CORS Origins (comma-separated)
ALLOWED_ORIGINS=http://localhost:8080,http://localhost:3001

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@company.com
SMTP_PASS=your-app-password
SMTP_FROM=noreply@neuro-pilot.ai

# Feature Flags
ENABLE_AUDIT_LOGGING=true
ENABLE_PERFORMANCE_MONITORING=true
ENABLE_RATE_LIMITING=true
ENABLE_CORS=true
ALLOW_DEFAULT_TENANT=true

# AI Modules
AIOPS_ENABLED=true
GOVERNANCE_ENABLED=true
INSIGHT_ENABLED=true
COMPLIANCE_ENABLED=true

# Admin Bootstrap
ADMIN_EMAIL=admin@secure-inventory.dev

# Encryption Keys - Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
DATA_ENCRYPTION_KEY=your-32-byte-hex-key-here
ENCRYPTION_KEY=your-32-byte-hex-key-here

# 2FA Configuration
REQUIRE_2FA_FOR_ADMINS=true
REQUIRE_2FA_FOR_OWNER=true
