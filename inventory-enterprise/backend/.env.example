# ═══════════════════════════════════════════════════════════════
# Inventory Enterprise System v2.7.0 - Environment Configuration
# ═══════════════════════════════════════════════════════════════

# ─────────────────────────────────────────────────────────────────
# SERVER CONFIGURATION
# ─────────────────────────────────────────────────────────────────
PORT=8083
NODE_ENV=development

# ─────────────────────────────────────────────────────────────────
# DATABASE CONFIGURATION
# ─────────────────────────────────────────────────────────────────

# SQLite (default - no setup required)
DATABASE_URL=./database.db

# PostgreSQL (optional - enable if you have Postgres installed)
POSTGRES_ENABLED=false
# POSTGRES_URL=postgresql://user:password@localhost:5432/inventory_enterprise
# POSTGRES_DUAL_WRITE=false  # Set true to write to both SQLite and Postgres
# POSTGRES_PRIMARY=false     # Set true to read from Postgres instead of SQLite

# ─────────────────────────────────────────────────────────────────
# REDIS CONFIGURATION (optional - for caching)
# ─────────────────────────────────────────────────────────────────
REDIS_ENABLED=false
# REDIS_HOST=localhost
# REDIS_PORT=6379
# REDIS_PASSWORD=
# REDIS_DB=0

# ─────────────────────────────────────────────────────────────────
# AUTHENTICATION & SECURITY
# ─────────────────────────────────────────────────────────────────
JWT_SECRET=your-super-secret-jwt-key-change-in-production-at-least-32-characters
JWT_EXPIRES_IN=7d
ADMIN_EMAIL=admin@neuro-pilot.ai
ADMIN_PASSWORD=Admin123!@#

# Session
SESSION_SECRET=your-session-secret-change-in-production-at-least-32-characters

# Encryption
BCRYPT_ROUNDS=12

# ─────────────────────────────────────────────────────────────────
# AI OPS AUTOMATION (PASS L v2.6.0)
# ─────────────────────────────────────────────────────────────────
AIOPS_ENABLED=true
AIOPS_CHECK_INTERVAL_MS=60000
AIOPS_AUTO_REMEDIATION=true
AIOPS_DRY_RUN=false

# Prometheus (optional - for metrics collection)
PROMETHEUS_ENABLED=false
# PROMETHEUS_URL=http://localhost:9090

# Alerting (optional)
# SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL
# SLACK_CHANNEL=#alerts
# PAGERDUTY_INTEGRATION_KEY=your-pagerduty-key

# ─────────────────────────────────────────────────────────────────
# GENERATIVE INTELLIGENCE (PASS M v2.7.0)
# ─────────────────────────────────────────────────────────────────

# Governance Agent (autonomous policy learning)
GOVERNANCE_ENABLED=true
GOVERNANCE_LEARNING_INTERVAL=86400000
GOVERNANCE_ADAPTATION_ENABLED=true
GOVERNANCE_MIN_DATA_POINTS=100
GOVERNANCE_CONFIDENCE_THRESHOLD=0.85

# Insight Generator (weekly executive summaries)
INSIGHT_ENABLED=true
INSIGHT_PROVIDER=mock
INSIGHT_MODEL=gpt-4
INSIGHT_REPORT_INTERVAL=604800000
INSIGHT_LANGUAGES=en,fr

# LLM API Keys (optional - system works in mock mode without these)
# OPENAI_API_KEY=sk-...
# ANTHROPIC_API_KEY=sk-ant-...

# Compliance Audit (daily security scans)
COMPLIANCE_ENABLED=true
COMPLIANCE_AUDIT_INTERVAL=86400000
COMPLIANCE_FRAMEWORKS=iso27001,soc2,owasp
COMPLIANCE_MIN_SCORE=0.95
COMPLIANCE_AUTO_REMEDIATION=false

# ─────────────────────────────────────────────────────────────────
# METRICS & MONITORING
# ─────────────────────────────────────────────────────────────────
METRICS_ENABLED=true
METRICS_PORT=8083
METRICS_PATH=/metrics

# ─────────────────────────────────────────────────────────────────
# LOGGING
# ─────────────────────────────────────────────────────────────────
LOG_LEVEL=info
LOG_FILE=./logs/app.log
LOG_RETENTION_DAYS=90

# ─────────────────────────────────────────────────────────────────
# CORS
# ─────────────────────────────────────────────────────────────────
CORS_ORIGIN=http://localhost:3000,http://localhost:8083
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8083

# ─────────────────────────────────────────────────────────────────
# RATE LIMITING
# ─────────────────────────────────────────────────────────────────
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
AUTH_RATE_LIMIT_MAX=5

# ─────────────────────────────────────────────────────────────────
# FEATURE FLAGS
# ─────────────────────────────────────────────────────────────────
MULTI_TENANCY_ENABLED=true
RBAC_ENABLED=true
WEBHOOKS_ENABLED=true
REALTIME_ENABLED=true
ENABLE_AUDIT_LOGGING=true
ENABLE_PERFORMANCE_MONITORING=true
ENABLE_RATE_LIMITING=true
ENABLE_CORS=true

# ─────────────────────────────────────────────────────────────────
# EMAIL (optional - for notifications)
# ─────────────────────────────────────────────────────────────────
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASS=your-app-password
# SMTP_FROM=noreply@neuro-pilot.ai

# ─────────────────────────────────────────────────────────────────
# FILE UPLOAD
# ─────────────────────────────────────────────────────────────────
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=image/jpeg,image/png,text/csv,application/pdf

# ─────────────────────────────────────────────────────────────────
# BACKUP
# ─────────────────────────────────────────────────────────────────
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_LOCATION=./backups

# ─────────────────────────────────────────────────────────────────
# CACHE
# ─────────────────────────────────────────────────────────────────
CACHE_TTL=3600
CACHE_MAX_KEYS=1000

# ─────────────────────────────────────────────────────────────────
# DEVELOPMENT (only in development)
# ─────────────────────────────────────────────────────────────────
DEBUG_MODE=false
PRETTY_LOGS=false
