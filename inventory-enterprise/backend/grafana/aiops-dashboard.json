{
  "dashboard": {
    "title": "NeuroInnovate AI Ops - Predictive Incident Response",
    "tags": ["aiops", "automation", "ml", "incidents"],
    "timezone": "browser",
    "schemaVersion": 27,
    "version": 1,
    "refresh": "30s",
    "time": {
      "from": "now-6h",
      "to": "now"
    },
    "panels": [
      {
        "id": 1,
        "title": "AI Ops Agent Status",
        "type": "stat",
        "gridPos": { "x": 0, "y": 0, "w": 6, "h": 4 },
        "targets": [
          {
            "expr": "aiops_agent_status",
            "legendFormat": "Status",
            "refId": "A"
          }
        ],
        "options": {
          "graphMode": "none",
          "colorMode": "background",
          "orientation": "auto",
          "text": {
            "valueSize": 48
          },
          "reduceOptions": {
            "values": false,
            "calcs": ["lastNotNull"]
          }
        },
        "fieldConfig": {
          "defaults": {
            "mappings": [
              { "type": "value", "value": "1", "text": "Running" },
              { "type": "value", "value": "0", "text": "Stopped" }
            ],
            "thresholds": {
              "steps": [
                { "value": 0, "color": "red" },
                { "value": 1, "color": "green" }
              ]
            }
          }
        }
      },
      {
        "id": 2,
        "title": "Incidents Predicted (24h)",
        "type": "stat",
        "gridPos": { "x": 6, "y": 0, "w": 6, "h": 4 },
        "targets": [
          {
            "expr": "increase(aiops_incidents_predicted_total[24h])",
            "legendFormat": "Predicted",
            "refId": "A"
          }
        ],
        "options": {
          "graphMode": "area",
          "colorMode": "value",
          "textMode": "value_and_name"
        }
      },
      {
        "id": 3,
        "title": "Remediation Success Rate",
        "type": "gauge",
        "gridPos": { "x": 12, "y": 0, "w": 6, "h": 4 },
        "targets": [
          {
            "expr": "(aiops_remediations_succeeded_total / (aiops_remediations_succeeded_total + aiops_remediations_failed_total)) * 100",
            "legendFormat": "Success Rate",
            "refId": "A"
          }
        ],
        "options": {
          "showThresholdLabels": false,
          "showThresholdMarkers": true
        },
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "min": 0,
            "max": 100,
            "thresholds": {
              "steps": [
                { "value": 0, "color": "red" },
                { "value": 70, "color": "yellow" },
                { "value": 90, "color": "green" }
              ]
            }
          }
        }
      },
      {
        "id": 4,
        "title": "Mean Response Time",
        "type": "stat",
        "gridPos": { "x": 18, "y": 0, "w": 6, "h": 4 },
        "targets": [
          {
            "expr": "aiops_mean_response_time_ms",
            "legendFormat": "Response Time",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "ms",
            "thresholds": {
              "steps": [
                { "value": 0, "color": "green" },
                { "value": 30000, "color": "yellow" },
                { "value": 60000, "color": "red" }
              ]
            }
          }
        },
        "options": {
          "graphMode": "area",
          "colorMode": "background"
        }
      },
      {
        "id": 5,
        "title": "Predicted Incidents Timeline",
        "type": "timeseries",
        "gridPos": { "x": 0, "y": 4, "w": 12, "h": 8 },
        "targets": [
          {
            "expr": "rate(aiops_incidents_predicted_total[5m])",
            "legendFormat": "Incidents/min",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "palette-classic"
            },
            "custom": {
              "axisPlacement": "auto",
              "barAlignment": 0,
              "drawStyle": "line",
              "fillOpacity": 10,
              "gradientMode": "none",
              "lineInterpolation": "smooth",
              "lineWidth": 2,
              "pointSize": 5,
              "showPoints": "auto",
              "spanNulls": false
            }
          }
        },
        "options": {
          "tooltip": {
            "mode": "single"
          },
          "legend": {
            "displayMode": "list",
            "placement": "bottom"
          }
        }
      },
      {
        "id": 6,
        "title": "Remediation Actions (Success vs Failure)",
        "type": "timeseries",
        "gridPos": { "x": 12, "y": 4, "w": 12, "h": 8 },
        "targets": [
          {
            "expr": "rate(aiops_remediations_succeeded_total[5m])",
            "legendFormat": "Successful",
            "refId": "A"
          },
          {
            "expr": "rate(aiops_remediations_failed_total[5m])",
            "legendFormat": "Failed",
            "refId": "B"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "palette-classic"
            },
            "custom": {
              "fillOpacity": 30
            }
          },
          "overrides": [
            {
              "matcher": { "id": "byName", "options": "Successful" },
              "properties": [{ "id": "color", "value": { "fixedColor": "green", "mode": "fixed" } }]
            },
            {
              "matcher": { "id": "byName", "options": "Failed" },
              "properties": [{ "id": "color", "value": { "fixedColor": "red", "mode": "fixed" } }]
            }
          ]
        }
      },
      {
        "id": 7,
        "title": "Incident Type Distribution",
        "type": "piechart",
        "gridPos": { "x": 0, "y": 12, "w": 8, "h": 8 },
        "targets": [
          {
            "expr": "sum by (incident_type) (increase(aiops_incidents_predicted_total{incident_type!=\"\"}[24h]))",
            "legendFormat": "{{incident_type}}",
            "refId": "A"
          }
        ],
        "options": {
          "pieType": "donut",
          "displayLabels": ["name", "percent"],
          "legend": {
            "displayMode": "table",
            "placement": "right"
          }
        }
      },
      {
        "id": 8,
        "title": "Prediction Accuracy",
        "type": "timeseries",
        "gridPos": { "x": 8, "y": 12, "w": 8, "h": 8 },
        "targets": [
          {
            "expr": "(aiops_true_positives_total / (aiops_true_positives_total + aiops_false_positives_total)) * 100",
            "legendFormat": "Precision %",
            "refId": "A"
          },
          {
            "expr": "aiops_prediction_confidence_avg * 100",
            "legendFormat": "Confidence %",
            "refId": "B"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "min": 0,
            "max": 100,
            "custom": {
              "axisPlacement": "auto",
              "fillOpacity": 20
            },
            "thresholds": {
              "steps": [
                { "value": 0, "color": "red" },
                { "value": 70, "color": "yellow" },
                { "value": 85, "color": "green" }
              ]
            }
          }
        }
      },
      {
        "id": 9,
        "title": "Response Time Distribution",
        "type": "histogram",
        "gridPos": { "x": 16, "y": 12, "w": 8, "h": 8 },
        "targets": [
          {
            "expr": "aiops_response_time_seconds_bucket",
            "legendFormat": "{{le}}",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "s"
          }
        }
      },
      {
        "id": 10,
        "title": "Recent Predictions (Table)",
        "type": "table",
        "gridPos": { "x": 0, "y": 20, "w": 24, "h": 8 },
        "targets": [
          {
            "expr": "aiops_prediction_info",
            "format": "table",
            "refId": "A"
          }
        ],
        "options": {
          "showHeader": true,
          "sortBy": [
            {
              "displayName": "Time",
              "desc": true
            }
          ]
        },
        "fieldConfig": {
          "defaults": {
            "custom": {
              "align": "auto"
            }
          },
          "overrides": [
            {
              "matcher": { "id": "byName", "options": "severity" },
              "properties": [
                {
                  "id": "mappings",
                  "value": [
                    {
                      "type": "value",
                      "options": {
                        "critical": { "color": "red", "text": "Critical" },
                        "high": { "color": "orange", "text": "High" },
                        "medium": { "color": "yellow", "text": "Medium" },
                        "low": { "color": "green", "text": "Low" }
                      }
                    }
                  ]
                }
              ]
            }
          ]
        }
      }
    ]
  }
}
