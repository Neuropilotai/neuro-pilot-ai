{
  "dashboard": {
    "title": "NeuroPilot UI Performance Dashboard (v16.5.0)",
    "tags": ["neuropilot", "ui", "governance", "performance"],
    "timezone": "browser",
    "editable": true,
    "graphTooltip": 1,
    "time": {
      "from": "now-6h",
      "to": "now"
    },
    "refresh": "30s",
    "panels": [
      {
        "id": 1,
        "type": "stat",
        "title": "Governance Panel - Total Hits",
        "targets": [
          {
            "expr": "sum(increase(ui_hits_total{endpoint=~\"governance.*\"}[5m]))",
            "legendFormat": "Total Hits"
          }
        ],
        "gridPos": {
          "h": 6,
          "w": 6,
          "x": 0,
          "y": 0
        },
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {
                  "value": null,
                  "color": "green"
                },
                {
                  "value": 100,
                  "color": "yellow"
                },
                {
                  "value": 500,
                  "color": "red"
                }
              ]
            },
            "unit": "short"
          }
        },
        "options": {
          "colorMode": "value",
          "graphMode": "area",
          "justifyMode": "auto",
          "orientation": "auto"
        }
      },
      {
        "id": 2,
        "type": "stat",
        "title": "Active WebSocket Connections",
        "targets": [
          {
            "expr": "ui_websocket_connections_current",
            "legendFormat": "Connections"
          }
        ],
        "gridPos": {
          "h": 6,
          "w": 6,
          "x": 6,
          "y": 0
        },
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {
                  "value": null,
                  "color": "red"
                },
                {
                  "value": 1,
                  "color": "green"
                },
                {
                  "value": 10,
                  "color": "yellow"
                },
                {
                  "value": 50,
                  "color": "orange"
                }
              ]
            },
            "unit": "short"
          }
        },
        "options": {
          "colorMode": "value",
          "graphMode": "area",
          "justifyMode": "auto",
          "orientation": "auto"
        }
      },
      {
        "id": 3,
        "type": "stat",
        "title": "User Actions (5m)",
        "targets": [
          {
            "expr": "sum(increase(ui_actions_total[5m]))",
            "legendFormat": "Actions"
          }
        ],
        "gridPos": {
          "h": 6,
          "w": 6,
          "x": 12,
          "y": 0
        },
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {
                  "value": null,
                  "color": "green"
                },
                {
                  "value": 50,
                  "color": "yellow"
                },
                {
                  "value": 200,
                  "color": "red"
                }
              ]
            },
            "unit": "short"
          }
        },
        "options": {
          "colorMode": "value",
          "graphMode": "area",
          "justifyMode": "auto",
          "orientation": "auto"
        }
      },
      {
        "id": 4,
        "type": "stat",
        "title": "Avg Panel Render Time (p95)",
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(ui_panel_render_duration_ms_bucket[5m]))",
            "legendFormat": "p95"
          }
        ],
        "gridPos": {
          "h": 6,
          "w": 6,
          "x": 18,
          "y": 0
        },
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {
                  "value": null,
                  "color": "green"
                },
                {
                  "value": 500,
                  "color": "yellow"
                },
                {
                  "value": 1000,
                  "color": "red"
                }
              ]
            },
            "unit": "ms"
          }
        },
        "options": {
          "colorMode": "value",
          "graphMode": "area",
          "justifyMode": "auto",
          "orientation": "auto"
        }
      },
      {
        "id": 5,
        "type": "timeseries",
        "title": "UI Endpoint Hits Over Time",
        "targets": [
          {
            "expr": "rate(ui_hits_total[5m])",
            "legendFormat": "{{endpoint}}"
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 6
        },
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "palette-classic"
            },
            "custom": {
              "axisLabel": "Requests/sec",
              "fillOpacity": 10,
              "lineWidth": 2,
              "showPoints": "never"
            },
            "unit": "reqps"
          }
        },
        "options": {
          "legend": {
            "displayMode": "list",
            "placement": "bottom"
          },
          "tooltip": {
            "mode": "multi"
          }
        }
      },
      {
        "id": 6,
        "type": "timeseries",
        "title": "User Actions Over Time",
        "targets": [
          {
            "expr": "rate(ui_actions_total[5m])",
            "legendFormat": "{{action}}"
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 6
        },
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "palette-classic"
            },
            "custom": {
              "axisLabel": "Actions/sec",
              "fillOpacity": 10,
              "lineWidth": 2,
              "showPoints": "never"
            },
            "unit": "short"
          }
        },
        "options": {
          "legend": {
            "displayMode": "list",
            "placement": "bottom"
          },
          "tooltip": {
            "mode": "multi"
          }
        }
      },
      {
        "id": 7,
        "type": "heatmap",
        "title": "Panel Render Duration Heatmap",
        "targets": [
          {
            "expr": "sum(increase(ui_panel_render_duration_ms_bucket[1m])) by (le, panel)",
            "format": "heatmap",
            "legendFormat": "{{panel}}"
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 14
        },
        "options": {
          "calculate": true,
          "cellGap": 2,
          "color": {
            "mode": "scheme",
            "scheme": "Spectral"
          },
          "yAxis": {
            "unit": "ms"
          }
        }
      },
      {
        "id": 8,
        "type": "timeseries",
        "title": "WebSocket Connections Timeline",
        "targets": [
          {
            "expr": "ui_websocket_connections_current",
            "legendFormat": "Active Connections"
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 14
        },
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "palette-classic"
            },
            "custom": {
              "axisLabel": "Connections",
              "fillOpacity": 20,
              "lineWidth": 2,
              "showPoints": "auto"
            },
            "unit": "short"
          }
        },
        "options": {
          "legend": {
            "displayMode": "list",
            "placement": "bottom"
          },
          "tooltip": {
            "mode": "single"
          }
        }
      },
      {
        "id": 9,
        "type": "table",
        "title": "Top UI Endpoints by Hit Count",
        "targets": [
          {
            "expr": "topk(10, sum by (endpoint) (increase(ui_hits_total[1h])))",
            "format": "table",
            "instant": true
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 8,
          "x": 0,
          "y": 22
        },
        "options": {
          "showHeader": true,
          "sortBy": [
            {
              "displayName": "Value",
              "desc": true
            }
          ]
        },
        "fieldConfig": {
          "defaults": {
            "custom": {
              "align": "auto"
            }
          },
          "overrides": [
            {
              "matcher": {
                "id": "byName",
                "options": "Value"
              },
              "properties": [
                {
                  "id": "custom.width",
                  "value": 100
                }
              ]
            }
          ]
        }
      },
      {
        "id": 10,
        "type": "table",
        "title": "Top User Actions (1h)",
        "targets": [
          {
            "expr": "topk(10, sum by (action) (increase(ui_actions_total[1h])))",
            "format": "table",
            "instant": true
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 8,
          "x": 8,
          "y": 22
        },
        "options": {
          "showHeader": true,
          "sortBy": [
            {
              "displayName": "Value",
              "desc": true
            }
          ]
        },
        "fieldConfig": {
          "defaults": {
            "custom": {
              "align": "auto"
            }
          },
          "overrides": [
            {
              "matcher": {
                "id": "byName",
                "options": "Value"
              },
              "properties": [
                {
                  "id": "custom.width",
                  "value": 100
                }
              ]
            }
          ]
        }
      },
      {
        "id": 11,
        "type": "gauge",
        "title": "Panel Performance Score",
        "description": "Composite score based on render time and error rate",
        "targets": [
          {
            "expr": "100 - (histogram_quantile(0.95, rate(ui_panel_render_duration_ms_bucket[5m])) / 10)",
            "legendFormat": "Performance Score"
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 8,
          "x": 16,
          "y": 22
        },
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {
                  "value": null,
                  "color": "red"
                },
                {
                  "value": 60,
                  "color": "yellow"
                },
                {
                  "value": 80,
                  "color": "green"
                }
              ]
            },
            "max": 100,
            "min": 0,
            "unit": "percent"
          }
        },
        "options": {
          "orientation": "auto",
          "showThresholdLabels": false,
          "showThresholdMarkers": true
        }
      }
    ]
  },
  "overwrite": true,
  "message": "NeuroPilot UI Performance Dashboard v16.5.0"
}
